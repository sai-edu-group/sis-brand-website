RewriteEngine On

# -----------------------------------
# Apply ONLY for root domain & www
# -----------------------------------
RewriteCond %{HTTP_HOST} ^(www\.)?saiinternationalschool\.com$ [NC]

# -----------------------------------
# Do NOT proxy Astro assets & static files
# -----------------------------------
RewriteCond %{REQUEST_URI} ^/_astro/ [OR]
RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|svg|webp|gif|ico|woff2?|ttf|json|map)$
RewriteRule ^(.*)$ proxy.php?path=$1 [QSA,L]

# -----------------------------------
# Proxy all other routes
# -----------------------------------
RewriteCond %{REQUEST_URI} !^/proxy.php$
RewriteRule ^(.*)$ proxy.php?path=$1 [QSA,L]