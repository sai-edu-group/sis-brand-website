---
export const prerender = true;

// COMPONENTS //
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import ArticleConsumption from "@/components/ArticleConsumption.astro";

// CONSTANTS //
import { URLS } from "@/infrastructure/constants/urls";

// OTHERS //
import Layout from "@/layouts/Layout.astro";

// DATA //
import { affiliationsDetails } from "@/data/about/affiliations";

/**
 * Generate static paths for all team and advisory board member pages
 * @returns Array of static paths with member data
 */
export async function getStaticPaths() {
  const paths: Array<{
    params: { name: string };
    props: {
      affiliationItem: any;
    };
  }> = [];

  // Generate paths for team members
  affiliationsDetails.affiliationsContent.forEach((affiliationItem: any) => {
    paths.push({
      params: {
        name: affiliationItem.title.toLowerCase().replaceAll(" ", "-"),
      },
      props: {
        affiliationItem,
      },
    });
  });

  return paths;
}

const { affiliationItem } = Astro.props;

// Prepare breadcrumb items based on personType
const breadcrumbItems = [
  { label: "Affiliations", href: URLS.ABOUT.AFFILIATIONS.ROOT },
  { label: affiliationItem.title, href: `#` },
];

// Prepare section header details
const sectionHeaderDetails = {
  title: affiliationItem.title,
  subtitle: affiliationItem.description,
};
---

<Layout>
  <!-- Breadcrumbs Section -->
  <div class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container mx-auto px-6 pt-30 pb-5 md:pt-40 md:pb-8 lg:pb-9 2xl:px-0"
    >
      <Breadcrumbs items={breadcrumbItems} />
    </div>
  </div>
  <ArticleConsumption
    sectionHeaderDetails={sectionHeaderDetails}
    articleDetail={affiliationItem}
  />
</Layout>
