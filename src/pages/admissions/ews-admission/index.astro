---
// COMPONENTS //
import Article from "@/components/ui/Article.astro";
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro";

// OTHERS //
import Layout from "@/layouts/Layout.astro";

// META //
import ewsAdmissionMeta from "@/data/meta/admissions/ews-admission/ews-admission.json";

// DATA //
import {
  ewsBreadcrumbItems,
  sectionHeaderContent,
  ewsAdmissions,
} from "@/data/admissions/ews";
---

<Layout meta={ewsAdmissionMeta}>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container mx-auto flex flex-col gap-5 px-6 pt-34 pb-30 md:gap-8 md:px-8 md:pt-40 md:pb-40 lg:gap-9 2xl:px-0"
    >
      <Breadcrumbs items={ewsBreadcrumbItems} />
      <!-- EWS Admissions Section -->
      <Article title={sectionHeaderContent?.title}>
        <!--  EWS Admissions Description -->
        <div set:html={ewsAdmissions.content} />
      </Article>
    </div>
  </section>
</Layout>
