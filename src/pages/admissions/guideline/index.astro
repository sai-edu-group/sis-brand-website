---
// COMPONENTS //
import Article from "@/components/Article.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

// CONSTANTS //
import { URLS } from "@/infrastructure/constants/urls";

// OTHERS //
import Layout from "@/layouts/Layout.astro";

// META //
import guidelineMeta from "@/data/meta/admissions/guideline/guideline.json";

// DATA //
import {
  admissionsGuidlinesContent,
  sectionHeaderContent,
} from "@/data/admissions/admissions-guidelines";
import Image from "astro/components/Image.astro";

// Prepare breadcrumb items
const breadcrumbItems = [
  { label: "Admissions", href: URLS.ADMISSIONS.ROOT },
  { label: "Admissions Guidelines", href: `#` },
];
---

<Layout meta={guidelineMeta}>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container mx-auto flex flex-col gap-5 px-6 pt-34 pb-30 md:gap-8 md:px-8 md:pt-40 md:pb-40 lg:gap-9 2xl:px-0"
    >
      <Breadcrumbs items={breadcrumbItems} />
      <!-- Admissions Guidelines Section -->
      <Article
        title={sectionHeaderContent?.title}
        subtitle={sectionHeaderContent?.subtitle}
      >
        <!--  Admissions Guidelines Content -->
        <div class="flex flex-col gap-10 md:gap-14 lg:gap-20">
          <!-- Admissions Guidelines Image and Details -->
          {
            admissionsGuidlinesContent.landscapeImg && (
              <Image
                src={admissionsGuidlinesContent.landscapeImg}
                alt=" Admissions Guidelines Image"
                class="card-anim card-bottom h-[257px] w-full rounded-3xl object-cover md:h-[524px] lg:h-[600px]"
                style={`--delay: 0.1s`}
                width={1200}
                height={600}
              />
            )
          }

          <!--  Admissions Guidelines Description -->
          <div set:html={admissionsGuidlinesContent.content} />
        </div>
      </Article>
    </div>
  </section>
</Layout>
