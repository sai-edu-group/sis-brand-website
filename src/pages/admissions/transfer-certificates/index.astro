---
// LAYOUT //
import Layout from "@/layouts/Layout.astro";

// COMPONENTS //
import SectionHeaderMain from "@/components/SectionHeaderMain.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import ImageCard from "@/components/ImageCard.astro";
import Lightbox from "@/components/Lightbox.astro";

// DATA //
import {
  transferCertificatesBreadcrumbItems,
  sectionHeaderContent,
  transferCertificates,
} from "@/data/admissions/transfer-certificate";
---

<Layout>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container m-auto flex flex-col gap-10 px-5 pt-32 pb-14 md:gap-14 lg:gap-16 lg:pt-40"
    >
      <!-- Breadcrumbs -->
      <Breadcrumbs items={transferCertificatesBreadcrumbItems} />

      <!-- Body of the Transfer Certificates -->
      <div class="flex flex-col gap-8 md:gap-12 lg:gap-14">
        <!-- Section Header -->
        <SectionHeaderMain
          title={sectionHeaderContent.title}
          subtitle={sectionHeaderContent.subtitle}
        />

        <!-- Transfer Certificates -->
        <div class="flex flex-col gap-7 md:gap-8 lg:gap-11">
          <!-- Transfer Certificates Images -->
          <div
            class="grid grid-cols-1 gap-5 md:grid-cols-2 md:gap-6 lg:grid-cols-3"
          >
            {
              transferCertificates?.map(
                (transferCertificatesItem, transferCertificatesIndex) => (
                  <ImageCard
                    image={transferCertificatesItem.image}
                    caption={transferCertificatesItem.name}
                    index={transferCertificatesIndex}
                    classes="max-h-[500px]"
                  />
                ),
              )
            }
          </div>

          <!-- Lightbox -->
          <Lightbox />
        </div>
      </div>
    </div>
  </section>
</Layout>
