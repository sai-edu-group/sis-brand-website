---
// COMPONENTS //
import Breadcrumbs from "@/components/Breadcrumbs.astro";

// OTHERS //
import Layout from "@/layouts/Layout.astro";

// COMPONENTS //
import CourseCard from "@/components/CourseCard.astro";
import SectionHeaderMain from "@/components/SectionHeaderMain.astro";

// DATA //
import {
  careerResults,
  careerResultsSectionHeader,
} from "@/data/results/career-results";
import { URLS } from "@/infrastructure/constants/urls";
import { careerResultsBreadcrumbs } from "@/data/results/career-results";
---

<Layout>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container m-auto flex flex-col gap-9 px-5 pt-32 pb-14 md:gap-14 lg:gap-16 lg:pt-40"
    >
      <!-- Breadcrumbs Section -->
      <Breadcrumbs items={careerResultsBreadcrumbs} />

      <div class="flex flex-col gap-8 md:gap-12 lg:gap-14">
        <!-- Section Header -->
        <SectionHeaderMain
          title={careerResultsSectionHeader.title}
          subtitle={careerResultsSectionHeader.subtitle}
        />

        <!-- Courses -->
        <div class="flex w-full flex-row flex-wrap items-center gap-5 md:gap-6">
          {
            careerResults.map((examItem) => (
              <CourseCard
                title={`${examItem.name} Results`}
                image={`results/exam-${examItem.name.toLowerCase().replace(" ", "-")}.jpg`}
                onCtaClick={`window.location.href = "${URLS.RESULTS.CAREER_RESULTS.EXAM(examItem.name.toLowerCase().replace(" ", "-"))}?year=${examItem.years[0]}"`}
                ctaText="Show Results"
                classes="md:w-full lg:w-[32%]"
              />
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Layout>
