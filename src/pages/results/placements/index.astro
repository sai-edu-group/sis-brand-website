---
// LAYOUT //
import Layout from "@/layouts/Layout.astro";

// META //
import placementsMeta from "@/data/meta/results/placements/placements.json";

// COMPONENTS //
import SectionHeaderMain from "@/components/SectionHeaderMain.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import ImageCard from "@/components/ImageCard.astro";
import Lightbox from "@/components/Lightbox.astro";

// DATA //
import {
  placements,
  placementsBreadcrumbItems,
  placementsSectionHeader,
} from "@/data/results/placements";
---

<Layout meta={placementsMeta}>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container m-auto flex flex-col gap-10 px-5 pt-32 pb-14 md:gap-14 lg:gap-16 lg:pt-40"
    >
      <!-- Breadcrumbs -->
      <Breadcrumbs items={placementsBreadcrumbItems} />

      <!-- Body of the Results -->
      <div class="flex flex-col gap-8 md:gap-12 lg:gap-14">
        <!-- Section Header -->
        <SectionHeaderMain
          title={placementsSectionHeader.title}
          subtitle={placementsSectionHeader.subtitle}
        />

        <!-- Filter & Students -->
        <div class="flex flex-col gap-7 md:gap-8 lg:gap-11">
          <!-- Placement Images -->
          <div
            class="grid grid-cols-1 gap-5 md:grid-cols-2 md:gap-6 lg:grid-cols-3"
          >
            {
              placements?.map((placementItem, placementIndex) => (
                <ImageCard
                  image={placementItem.image}
                  caption={placementItem.name}
                  index={placementIndex}
                />
              ))
            }
          </div>

          <!-- Lightbox -->
          <Lightbox />
        </div>
      </div>
    </div>
  </section>
</Layout>
