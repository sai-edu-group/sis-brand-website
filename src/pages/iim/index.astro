  /* Full-screen wrapper */
  #flipbook-wrapper {
    width: 100vw;
    height: 100vh;
    overflow: hidden;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    background: #f0f0f0;
    padding: 20px;
    box-sizing: border-box;
  }

  /* Flipbook container */
  #book {
    width: 100%;
    height: 100%;
    max-width: 100vw;
    max-height: 100vh;

    border-radius: 12px;
    overflow: hidden;

    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
    background: var(--color-orange-500);
  }

  /* Navigation Buttons */
  .nav-buttons {
    margin-top: 15px;
    display: flex;
    gap: 20px;
  }

  .flip-btn {
    padding: 12px 22px;
    font-size: 16px;
    border-radius: 8px;
    background: #ff6b00;
    border: none;
    color: white;
    cursor: pointer;
