---
// LAYOUT //
// ENUMS //
import { IMAGE_TYPES } from "@/enums/image.enum";

// COMPONENTS //
import SectionHeaderMain from "@/components/ui/SectionHeaderMain.astro";
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro";
import ResultsCard from "@/components/ui/ResultsCard.astro";
import FilterBar from "@/components/ui/FilterBar.astro";
import EmptyState from "@/components/ui/EmptyState.astro";

// API SERVICES //
import { fetchStudentsByYearRequest } from "@/services/api/student-council.api.service";

// UTILS //
import { generateImagePath } from "@/utils/image.utils";

// OTHERS //
import Layout from "@/layouts/Layout.astro";

// DATA //
import studentCouncilMeta from "@/data/meta/student-leaders/student-council/student-council.json";
import {
  studentCouncil,
  studentCouncilBreadcrumbItems,
  studentCouncilSectionHeader,
} from "@/data/student-leaders/student-council";

// META //

// Get the Year from the URL - or - the latest year in Data
const year: number =
  Number(Astro.url.searchParams.get("year")) || new Date().getFullYear();

// Get the Students for the Year Selected
const students = await fetchStudentsByYearRequest(year);
---

<Layout meta={studentCouncilMeta}>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container m-auto flex flex-col gap-10 px-5 pt-32 pb-14 md:gap-14 lg:gap-16 lg:pt-40"
    >
      <!-- Breadcrumbs -->
      <Breadcrumbs items={studentCouncilBreadcrumbItems} />

      <!-- Body of the Results -->
      <div class="flex flex-col gap-8 md:gap-12 lg:gap-14">
        <!-- Section Header -->
        <SectionHeaderMain
          title={studentCouncilSectionHeader.title}
          subtitle={studentCouncilSectionHeader.subtitle}
        />

        <!-- Filter & Students -->
        <div class="flex flex-col gap-7 md:gap-8 lg:gap-11">
          <!-- Years Filters -->
          <FilterBar showSearch={false} years={studentCouncil.years} />

          <!-- Student Council Images -->
          <div
            class="grid grid-cols-1 gap-5 md:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-4"
          >
            {
              students && students.length > 0 ? (
                students?.map((studentsItem) => (
                  <ResultsCard
                    image={generateImagePath(
                      studentsItem.studentProfilePic,
                      IMAGE_TYPES.STUDENT_COUNCIL,
                    )}
                    studentName={studentsItem.studentName}
                    grade={studentsItem.designation}
                  />
                ))
              ) : (
                <div class="col-span-full">
                  <EmptyState
                    title="No Student Leaders Found"
                    description="We couldn't find any student leaders for the selected year. Please check back later."
                  />
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
