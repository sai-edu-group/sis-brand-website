---
// COMPONENTS //
import Article from "@/components/Article.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

// CONSTANTS //
import { URLS } from "@/infrastructure/constants/urls";

// OTHERS //
import Layout from "@/layouts/Layout.astro";

// DATA //
import {
  globalVisionContent,
  sectionHeaderContent,
} from "@/data/global-connect/global-vision";

// Prepare breadcrumb items
const breadcrumbItems = [
  { label: "Global Connect", href: URLS.GLOBAL_CONNECT.ROOT },
  { label: "Global Vision", href: `#` },
];
---

<Layout>
  <section class="bg-n-50 relative w-full overflow-hidden">
    <div
      class="container mx-auto flex flex-col gap-5 px-6 pt-34 pb-30 md:gap-8 md:px-8 md:pt-40 md:pb-40 lg:gap-9 2xl:px-0"
    >
      <Breadcrumbs items={breadcrumbItems} />
      <!-- Global Vision Section -->
      <Article
        title={sectionHeaderContent?.title}
        subtitle={sectionHeaderContent?.subtitle}
      >
        <!--  Global Vision Content -->
        <div class="flex flex-col gap-10 md:gap-14 lg:gap-20">
          <!-- Global Vision Image and Details -->
          {
            globalVisionContent.landscapeImg && (
              <img
                src={globalVisionContent.landscapeImg}
                alt=" Global Vision Image"
                class="card-anim card-bottom h-[257px] w-full rounded-3xl object-cover md:h-[524px] lg:h-[600px]"
                style={`--delay: 0.1s`}
              />
            )
          }

          <!--  Global Vision Description -->
          <div set:html={globalVisionContent.content} />
        </div>
      </Article>
    </div>
  </section>
</Layout>
