<script>
  // SCRIPTS //
  import { trackEvent } from "@/scripts/analytics";
  import { getDeviceType } from "@/scripts/device";

  // ENUMS //
  import { EVENTS } from "@/enums/analytics.enum";

  // Track Social Media Redirects
  const socialLinks = document.querySelectorAll("a.data-track-social");

  // Add analytics to them
  socialLinks.forEach((link) => {
    link.addEventListener("click", (e) => {
      const target = e.currentTarget as HTMLAnchorElement;
      const type = target.dataset.socialType;
      const value = target.dataset.socialValue;

      if (type === "email") {
        trackEvent(EVENTS.EMAIL_CLICK, {
          page_path: window.location.pathname,
          device_type: getDeviceType(),
          button_location: "sticky_bar",
          contacted_email: value,
        });
      } else if (type === "phone") {
        trackEvent(EVENTS.PHONE_CLICK, {
          page_path: window.location.pathname,
          device_type: getDeviceType(),
          button_location: "sticky_bar",
          contacted_number: value,
        });
      } else if (type === "linkedin" || type === "instagram") {
        trackEvent(EVENTS.SOCIAL_MEDIA_REDIRECTED, {
          page_path: window.location.pathname,
          device_type: getDeviceType(),
          social_media_platform: type,
        });
      }
    });
  });
</script>
