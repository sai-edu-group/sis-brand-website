---
// COMPONENTS //
import Image from "astro/components/Image.astro";

interface Props {
  img: string;
  title: string;
  subTitle: string;
  year: string;
}
const { img, title = "", subTitle = "", year = "" } = Astro.props as Props;
---

<div
  class="group bg-n-50 border-n-300 flex h-full w-full flex-col gap-2.5 overflow-hidden rounded-3xl border-2 p-4 md:gap-3 2xl:flex-row 2xl:gap-6"
>
  <!-- Award image -->
  <div
    class="relative h-56 w-full overflow-hidden rounded-xl md:h-[282px] 2xl:h-auto 2xl:w-[320px]"
  >
    <Image
      src={img}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-500 ease-out group-hover:scale-105"
      loading="lazy"
      decoding="async"
      width="400"
      height="300"
    />

    <!-- Overlay animation -->
    <span
      class="pointer-events-none absolute inset-0 before:absolute before:inset-0 before:-translate-x-[150%] before:bg-[linear-gradient(128deg,rgba(255,255,255,0)_-3.31%,rgba(255,255,255,0.56)_31.94%,rgba(255,255,255,0.78)_49.57%,rgba(255,255,255,0.26)_63.89%,rgba(255,255,255,0)_111.26%)] before:opacity-0 before:transition-all before:duration-[500ms] before:ease-in group-hover:before:translate-x-[150%] group-hover:before:opacity-100"
    ></span>
  </div>

  <div class="flex flex-1 flex-col justify-between gap-3 md:gap-6 2xl:gap-14">
    <!-- Award title -->
    <div class="flex items-center justify-between">
      <!-- Year -->
      <p class="text-n-500 font-light md:text-xl 2xl:text-2xl">
        {year}
      </p>
      <!-- Icon Button  -->
      <!-- <IconButton href={href} /> -->
    </div>
    <div class="flex flex-col gap-1 md:gap-2 lg:pb-5 2xl:gap-3.5">
      <!-- Title -->
      <p
        class="text-xl leading-tight font-semibold text-orange-500 md:text-2xl"
      >
        {title}
      </p>
      <!-- Subtitle -->
      <span
        class="font-secondary text-n-500 text-xs font-normal md:text-sm md:leading-5"
        >{subTitle}</span
      >
    </div>
  </div>
</div>
