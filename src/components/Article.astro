---
// OTHERS //
import SectionHeaderMain from "./SectionHeaderMain.astro";

interface Props {
  title?: string;
  subtitle?: string;
  eyebrowText?: string;
  ctaText?: string;
}

const {
  title = "",
  subtitle = "",
  ctaText = "",
  eyebrowText = "",
} = Astro.props as Props;
---

<div class="flex flex-col gap-9">
  <!-- Header Container -->
  <div class="flex flex-col gap-9">
    <SectionHeaderMain
      title={title}
      subtitle={subtitle}
      eyebrowText={eyebrowText}
      ctaText={ctaText}
    />
  </div>
  <div class="article-root">
    <slot />
  </div>
</div>

<style is:global>
  .article-root > * {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }

  .article-root > *.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  /* ------------------------------------
   ðŸ“Œ DESKTOP DEFAULT (â‰¥1024px)
------------------------------------- */

  .article-root h1 {
    color: var(--color-n-800);
    font-size: var(--text-6xl);
    font-weight: 600;
    margin-bottom: 44px;
  }

  .article-root h2 {
    color: var(--color-n-800);
    font-size: var(--text-5xl);
    font-weight: 600;
    margin-bottom: 40px;
  }

  .article-root h3 {
    color: var(--color-n-800);
    font-size: var(--text-4xl);
    font-weight: 600;
    margin-bottom: 32px;
  }

  .article-root h4 {
    color: var(--color-n-800);
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-bottom: 32px;
  }

  .article-root h5 {
    color: var(--color-n-800);
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: 32px;
  }

  .article-root h6 {
    color: var(--color-n-800);
    font-size: var(--text-base);
    font-weight: 600;
    margin-bottom: 32px;
  }

  .article-root p {
    color: var(--color-n-600);
    font-family: "Poppins", sans-serif;
    font-size: var(--text-xl);
    font-weight: 400;
    line-height: 150%;
    margin-bottom: 32px;
  }

  .article-root ol,
  .article-root ul {
    color: var(--color-n-600);
    font-family: "Poppins", sans-serif;
    font-size: var(--text-xl);
    font-weight: 400;
    line-height: 162.5%;
    letter-spacing: 0.2px;
    list-style-type: disc;
    padding-left: 1.25rem;
    margin-bottom: 8px;
  }

  .article-root a {
    color: var(--color-orange-500);
    font-family: "Poppins", sans-serif;
    font-size: var(--text-xl);
    font-weight: 500;
    letter-spacing: 0.2px;
    text-decoration-line: underline;
    margin-bottom: 32px;
  }

  /* ------------------------------------
   ðŸ“Œ TABLET (768â€“1023px)
------------------------------------- */
  @media (max-width: 1023px) and (min-width: 768px) {
    /* Tablet Margins */
    .article-root h1 {
      margin-bottom: 36px;
    }

    .article-root h2 {
      margin-bottom: 32px;
    }

    .article-root h3,
    .article-root h4,
    .article-root h5,
    .article-root h6 {
      margin-bottom: 28px;
    }

    .article-root p,
    .article-root ol,
    .article-root ul,
    .article-root a {
      font-size: var(--text-lg);
      margin-bottom: 24px;
    }
  }

  /* ------------------------------------
   ðŸ“Œ MOBILE (â‰¤767px)
------------------------------------- */
  @media (max-width: 767px) {
    /* Font sizes */
    .article-root ol,
    .article-root p,
    .article-root a {
      font-size: var(--text-base);
    }

    /* Mobile Margins */
    .article-root h1 {
      margin-bottom: 28px;
    }

    .article-root h2 {
      margin-bottom: 24px;
    }

    .article-root h3,
    .article-root h4,
    .article-root h5,
    .article-root h6 {
      margin-bottom: 20px;
    }

    .article-root p,
    .article-root ol,
    .article-root a {
      margin-bottom: 20px;
    }
  }
</style>
