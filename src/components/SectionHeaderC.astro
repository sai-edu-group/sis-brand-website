---
import Button from "./Button.astro";
interface Props {
  eyebrowText?: string;
  title: string;
  subtitle?: string;
  ctaText?: string;
}
const {
  eyebrowText = "",
  title = "",
  subtitle = "",
  ctaText = "",
} = Astro.props;
---

<div class="relative flex w-full flex-col items-start gap-10">
  <!-- Text Content -->
  <div class="space-y-2.5 md:space-y-1">
    <!-- Eyebrow text -->
    {
      eyebrowText && (
        <p class="text-n-600 text-sm font-normal md:text-base lg:text-xl">
          {eyebrowText}
        </p>
      )
    }
    <div class="relative flex flex-col gap-1 md:gap-4">
      <!-- Section title -->
      <p
        class="text-n-800 text-3xl leading-tight font-medium md:text-5xl lg:text-6xl"
      >
        {title}
      </p>
      <!-- Section subtitle -->
      {
        subtitle && (
          <p class="font-secondary text-n-600 text-xs leading-normal font-medium md:text-2xl">
            {subtitle}
          </p>
        )
      }
    </div>
  </div>

  <!-- Cta Button -->
  {ctaText && <Button text={ctaText} variant="solid" size="large" />}
</div>
