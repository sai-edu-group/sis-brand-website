---
import Button from "./Button.astro";

interface Props {
  eyebrowText?: string;
  title: string;
  subtitle?: string;
  ctaText?: string;
  showEyebrow?: boolean;
  showSubtitle?: boolean;
  showCta?: boolean;
}
const {
  eyebrowText = "Eyebrow",
  title = "Title",
  subtitle = "Subtitle",
  ctaText = "Button",
  showEyebrow = true,
  showSubtitle = false,
  showCta = false,
} = Astro.props;
---

<div class="relative flex w-full flex-col items-start gap-10">
  <!-- Text Content -->
  <div class="space-y-1 md:space-y-3">
    <!-- Eyebrow text -->
    {
      showEyebrow && (
        <p class="text-n-600 text-base font-normal md:text-xl">{eyebrowText}</p>
      )
    }
    <div class="relative flex flex-col gap-4">
      <!-- Section title -->
      <p class="text-n-800 text-3xl font-semibold md:text-6xl">
        {title}
      </p>
      <!-- Lines -->
      <img
        src={"/icons/double-lines.svg"}
        alt=""
        class="absolute right-[2%] -bottom-[50%] h-[19px] w-[130px] md:h-[34px] md:w-[232px]"
      />
      <!-- Section subtitle -->
      {
        showSubtitle && (
          <p class="font-secondary text-n-600 text-2xl font-semibold">
            {subtitle}
          </p>
        )
      }
    </div>
  </div>

  <!-- Cta Button -->
  {showCta && <Button text={ctaText} variant="solid" size="large" />}
</div>
