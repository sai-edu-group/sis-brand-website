---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="space-y-2">
  <!-- Title -->
  <h2 class="text-2xl font-semibold text-orange-500 md:text-4xl lg:text-6xl">
    {title}
  </h2>

  <!-- Subtitle -->
  {
    subtitle && (
      <p class="text-n-600 text-base font-semibold md:text-lg lg:text-xl">
        {subtitle}
      </p>
    )
  }
</div>
