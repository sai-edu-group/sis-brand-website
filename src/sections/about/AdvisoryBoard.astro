---
// COMPONENTS //
import PersonCard from "@/components/PersonCard.astro";
import SectionHeaderMain from "@/components/SectionHeaderMain.astro";

// DATA //
import {
  advisoryBoard,
  sectionHeaderDetails,
} from "@/data/about/members/advisory";
---

<section
  class="bg-n-100 ns-slider relative w-full overflow-hidden"
  id="advisory-board"
>
  <div
    class="container mx-auto flex flex-col gap-10 px-6 py-14 md:gap-14 md:py-20 lg:gap-20 lg:py-24 2xl:px-0"
  >
    <!-- Section Header -->
    <SectionHeaderMain {...sectionHeaderDetails} />

    <!-- Advisory Board Members Wrapper -->
    <div
      class="mx-auto hidden grid-cols-1 gap-8 md:grid-cols-2 lg:grid xl:grid-cols-3 2xl:grid-cols-4 2xl:gap-y-14"
    >
      {
        advisoryBoard.map((advisoryMemberItem) => (
          <div class="card-anim card-bottom">
            <PersonCard
              personName={advisoryMemberItem.name}
              designation={advisoryMemberItem.position}
              image={advisoryMemberItem.jpgImg}
              href={`/about/advisory/${advisoryMemberItem.id}/${advisoryMemberItem.name.replaceAll(" ", "-")}`}
            />
          </div>
        ))
      }
    </div>

    <!-- Advisory Board Slider for Mobile and Tablet -->
    <!-- Slider root: keep viewport + controls inside this wrapper -->
    <div
      data-embla-root
      id={"advisory-board-slider"}
      class="space-y-7 md:space-y-9 lg:hidden"
    >
      <!-- Viewport -->
      <div class="overflow-hidden" data-embla-viewport>
        <!-- Container -->
        <div class="flex gap-5.5" data-embla-container>
          <!-- Board Members Slides -->
          {
            advisoryBoard.map((advisoryMemberItem) => (
              <div class="ns-slide cursor-pointer" data-embla-slide>
                <PersonCard
                  personName={advisoryMemberItem.name}
                  designation={advisoryMemberItem.position}
                  image={advisoryMemberItem.jpgImg}
                  href={`/about/advisory/${advisoryMemberItem.id}/${advisoryMemberItem.name.replaceAll(" ", "-")}`}
                />
              </div>
            ))
          }
        </div>
      </div>

      <!-- Controls + Dots -->
      <div
        class="relative flex items-center justify-center gap-8 md:gap-12 lg:gap-20"
      >
        <!-- Dots -->
        <div class="flex items-center gap-1.5 md:gap-2" data-embla-dots></div>

        <div class="absolute right-0 flex gap-4 md:gap-6">
          <!--  Prev button -->
          <button
            type="button"
            id="prevButton"
            class="bg-n-50 border-n-200 hover:bg-n-200 flex size-9 cursor-pointer items-center justify-center rounded-full border p-1 md:size-14"
            data-embla-prev
            aria-label="Previous"
          >
            <span class="inline-flex">
              <svg
                class="size-5 md:size-7"
                xmlns="http://www.w3.org/2000/svg"
                width="29"
                height="29"
                viewBox="0 0 29 29"
                fill="none"
              >
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
