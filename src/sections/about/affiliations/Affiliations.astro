---
// COMPONENTS //
import ArticleCard from "@/components/ui/ArticleCard.astro";
import SectionHeaderMain from "@/components/ui/SectionHeaderMain.astro";

// CONSTANTS //
import { URLS } from "@/infrastructure/constants/urls";

// DATA //
import { affiliationsDetails } from "@/data/about/affiliations";
---

<section class="bg-n-100 relative w-full overflow-hidden">
  <div
    class="container mx-auto flex flex-col gap-10 p-6 md:gap-14 md:py-9 md:pb-18 lg:gap-20 lg:pb-24"
  >
    <!-- Section header title -->
    <SectionHeaderMain {...affiliationsDetails.sectionHeaderContent} />

    <!-- Affiliations Cards wrapper -->
    <div
      class="grid grid-cols-1 gap-5 lg:grid-cols-2 lg:gap-8 xl:grid-cols-3 xl:gap-9"
    >
      <!-- Affiliations Cards -->
      {
        affiliationsDetails.affiliationsContent.map(
          (affiliationsContentItem, cardIndex) => (
            <div
              class="card-anim card-bottom"
              style={`--delay: ${cardIndex * 0.1}s`}
            >
              <ArticleCard
                title={affiliationsContentItem.title}
                img={affiliationsContentItem.img}
                href={URLS.ABOUT.AFFILIATIONS.ITEM(
                  affiliationsContentItem.title
                    .toLowerCase()
                    .replaceAll("-", " "),
                )}
                description={affiliationsContentItem.description}
                badgeText=""
              />
            </div>
          ),
        )
      }
    </div>
  </div>
</section>
