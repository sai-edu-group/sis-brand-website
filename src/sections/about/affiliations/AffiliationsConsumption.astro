---
// TYPES //

// COMPONENTS //
import Article from "@/components/Article.astro";

interface Props {
  sectionHeaderDetails?: {
    title: string;
    subtitle?: string;
    eyebrowText?: string;
  };
  affiliationDetail: any;
}
const { sectionHeaderDetails, affiliationDetail } = Astro.props as Props;
---

<section class="bg-n-50 relative w-full overflow-hidden">
  <div
    class="container mx-auto flex flex-col gap-5 px-6 pb-30 md:gap-8 md:pb-40 lg:gap-9 2xl:px-0"
  >
    <!-- Article Section -->
    <Article {...sectionHeaderDetails}>
      <!--  Affiliations Consumption Content -->
      <div class="flex flex-col gap-10 md:gap-14 lg:gap-20">
        <!-- Affiliations Image and Details -->
        {
          affiliationDetail.landscapeImg && (
            <img
              src={affiliationDetail.landscapeImg}
              alt=" Affiliations Consumption Image"
              class="card-anim card-bottom h-[257px] w-full rounded-3xl object-cover md:h-[524px] lg:h-[600px]"
              style={`--delay: 0.1s`}
            />
          )
        }

        <!--  Affiliations Description -->
        <div set:html={affiliationDetail.content} />
      </div>
    </Article>
  </div>
</section>
