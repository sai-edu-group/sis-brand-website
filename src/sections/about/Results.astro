---
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import FilterBar from "../../components/FilterBar.astro";
import ResultsCard from "../../components/ResultsCard.astro";
import SectionHeaderMain from "../../components/SectionHeaderC.astro";

interface Props {
  breadcrumbItems: { label: string; href: string }[];
  sectionHeaderDetails?: {
    title: string;
    subtitle?: string;
    eyebrowText?: string;
  };
}
const { breadcrumbItems, sectionHeaderDetails } = Astro.props as Props;
---

<section class="bg-n-50 relative w-full overflow-hidden">
  <div
    class="container mx-auto flex flex-col gap-10 px-6 py-30 md:gap-8 md:py-40 lg:gap-9 2xl:px-0"
  >
    <!-- Breadcrumbs -->
    <Breadcrumbs items={breadcrumbItems} />

    <div class="flex flex-col gap-8">
      <SectionHeaderMain {...sectionHeaderDetails as any} />

      <div class="flex flex-col gap-7">
        <FilterBar showSearch={false} />

        <div class="grid grid-cols-1 gap-5">
          {[0, 1, 2, 3, 4, 5].map(() => <ResultsCard />)}
        </div>
      </div>
    </div>
  </div>
</section>
