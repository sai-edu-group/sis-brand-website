---
// COMPONENTS //
import ArticleCard from "../../components/ArticleCard.astro";
import SectionHeaderMain from "../../components/SectionHeaderMain.astro";

// DATA //
import { curriculumDetails } from "../../data/about/curriculum";
---

<section class="bg-n-100 relative w-full overflow-hidden">
  <div
    class="container mx-auto flex flex-col gap-10 px-6 py-14 md:gap-14 md:py-20 lg:gap-20 lg:py-28"
  >
    <!-- Section header title -->
    <SectionHeaderMain {...curriculumDetails.sectionHeaderContent} />

    <!-- Curriculum Cards wrapper -->
    <div
      class="grid grid-cols-1 gap-5 md:grid-cols-2 md:gap-8 xl:grid-cols-3 xl:gap-9"
    >
      <!-- Curriculum Cards -->
      {
        curriculumDetails.curriculumContent.map(
          (curriculumCardItem, cardIndex) => (
            <div
              class="card-anim card-bottom"
              style={`--delay: ${cardIndex * 0.1}s`}
            >
              <ArticleCard
                title={curriculumCardItem.title}
                img={curriculumCardItem.img}
                href={curriculumCardItem.href}
                description={curriculumCardItem.description}
                badgeText=""
              />
            </div>
          ),
        )
      }
    </div>
  </div>
</section>
