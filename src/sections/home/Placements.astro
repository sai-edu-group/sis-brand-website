---

<section class="bg-n-100" data-section="Placements & Pathways">
  <div
    class="container mx-auto flex flex-col gap-11 px-6 py-12 md:gap-16 md:px-0 md:py-16 lg:gap-14 lg:px-6 2xl:px-0"
  >
    <!-- Section Header with lines -->
    <SectionHeaderMain
      eyebrowText="Placements & Pathways"
      title="From SAI to the Worldâ€™s Best Institutions"
      subtitle="Our graduates continue their journeys at top universities and leading global companies across India and the world."
    />

    <!-- Placements band wrapper -->
    <div class="flex flex-col gap-7">
      <PlacementsBand
        kicker="Prestigious institutions in"
        title="India"
        logos={placementsDetails.band1}
        speedSec={10}
      />
      <PlacementsBand
        kicker="Ivy League & Renowned Institutes"
        title="Globally"
        logos={placementsDetails.band2}
        direction="rtl"
        speedSec={10}
      />
      <PlacementsBand
        kicker="Working with Industry"
        title="Leaders"
        logos={placementsDetails.band3}
        speedSec={10}
      />
    </div>
  </div>
</section>
