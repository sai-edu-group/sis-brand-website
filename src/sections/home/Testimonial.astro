<!-- Component-level init: scoped to this slider only -->
<script type="module">
  import { initEmblaRoot } from "../src/utils/embla.js";

  window.addEventListener("DOMContentLoaded", () => {
    const root = document.getElementById("testimonialSlider");
    initEmblaRoot(root, {
      align: "start",
      dragFree: true,
    });
  });
</script>
