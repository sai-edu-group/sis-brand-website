                    fill="#45556C"></path>
                </svg>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import EmblaCarousel from "embla-carousel";

  window.addEventListener("DOMContentLoaded", () => {
    const viewport = document.getElementById("embla-awards");
    if (!viewport) return;

    const embla = EmblaCarousel(viewport, {
      align: "start",
      containScroll: "trimSnaps",
      loop: false,
      dragFree: false, // snapping works best with fixed slide widths
    });

    document
      .getElementById("prevButton")
      ?.addEventListener("click", () => embla.scrollPrev());
    document
      .getElementById("nextButton")
      ?.addEventListener("click", () => embla.scrollNext());

    // Dots sync
    const dots = Array.from(document.querySelectorAll("[data-dot-index]"));
    const setSelectedDot = () => {
      const snap = embla.selectedScrollSnap();
      dots.forEach((dot, i) => {
        const active = i === snap;
        dot.setAttribute("aria-selected", active ? "true" : "false");
        dot.classList.toggle("scale-110", active);
      });
    };
    dots.forEach((dot, i) =>
      dot.addEventListener("click", () => embla.scrollTo(i))
    );
    embla.on("select", setSelectedDot);
    embla.on("reInit", setSelectedDot);
    setSelectedDot();
  });
</script>
<style>
  /* Slider-level variables (like your tb-slider reference) */
  .ns-slider {
    --slides: 1; /* default: mobile shows 1 */
    --gap: 28px; /* match the gap-7 above */
    --peek: 0px; /* extra visible width to “peek” next slide */
  }

  @media (min-width: 640px) {
    .ns-slider {
      --slides: 2;
      --peek: 0px;
    }
  }

  /* Each slide width: ((100% - total gaps - peek) / slides) */
  .ns-slide {
    flex: 0 0
      calc(
        (100% - (var(--gap) * (var(--slides) - 1)) - var(--peek)) /
          var(--slides)
      );
  }
</style>
