      eyebrowText="SAI News"
      subtitle="Discover the latest updates, thought leadership, and inspiring stories from the SAI community."
      title=" The SAI Chronicle"
    />

    <!-- Slider root: keep viewport + controls inside this wrapper -->
    <div data-embla-root id={uid} class="space-y-7 md:space-y-9">
      <!-- Viewport -->
      <div class="overflow-hidden" data-embla-viewport>
        <!-- Container -->
        <div class="flex gap-7" data-embla-container>
          {
            newsDetails.articleCards.map((card) => (
              <div class="ns-slide" data-embla-slide>
                <ArticleCard
                  title={card.title}
                  img={card.img}
                  topText={card.topText}
                  date={card.date}
                  tags={card.tags}
                />
              </div>
            ))
