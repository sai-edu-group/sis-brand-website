---
import Button from "../../components/Button.astro";
import LearningContent from "../../components/LearningContent.astro";
---

<section>
  <div
    class="container mx-auto flex flex-col gap-10 px-4 py-14 md:gap-11 md:py-20 lg:gap-12 lg:py-24"
  >
    <!-- Header -->
    <div
      class="flex flex-col gap-6 md:gap-7 lg:flex-row lg:items-end lg:gap-16"
    >
      <div class="flex flex-col gap-1.5 md:gap-3 lg:flex-1 lg:gap-4">
        <p class="text-n-600 text-sm md:text-xl">Learning @ 360</p>

        <!-- Title and Subtitle -->
        <div class="flex flex-col gap-1 md:gap-2 lg:gap-4">
          <p
            class="text-n-800 text-3xl md:text-4xl lg:w-[80%] xl:text-5xl xl:leading-[1.2] 2xl:text-6xl"
          >
            Education That Shapes Every Side of a Child
          </p>
          <p
            class="text-n-600 font-secondary text-xs font-medium md:text-lg lg:text-2xl lg:leading-[1.3]"
          >
            Shaping confident, compassionate, and <span class="text-orange-500">
              future-ready learners.</span
            >
          </p>
        </div>
      </div>
      <div class="lg:w-[316px]">
        <Button text="Scroll to Admission Form" />
      </div>
    </div>

    <!-- Main Content  -->
    <div class="flex flex-col items-start gap-3.5 lg:gap-6">
      <!-- Tabs  -->
      <div
        class="scrollbar-hide flex w-full items-center items-stretch justify-start gap-3 overflow-x-auto md:gap-5 lg:gap-6"
      >
        {
          [0, 1, 2, 3, 4, 5].map((_, idx) => (
            <div
              class={`flex flex-col items-center rounded-xl p-3 ${idx === 0 ? "bg-orange-500" : "bg-white"} md:px-3.5 md:py-4`}
            >
              <p
                class={`font-secondary text-xs leading-[1.3] text-nowrap ${idx === 0 ? "text-n-50" : "text-n-600"} md:text-sm`}
              >
                Smart Academics
              </p>
            </div>
          ))
        }
      </div>
      <LearningContent />
    </div>
  </div>
</section>
