---
import CommonHeader from "../../components/CommonHeader.astro";

interface Props {
  title?: string;
  subtitle?: string;
  formTitle?: string;
  buttonText?: string;
  brochureText?: string;
  backgroundImage?: string;
  childrenImage?: string;
  decorativeLines?: string;
  childVectors?: string;
  arrowIcon?: string;
}

const {
  title = "Shaping Learners who Inspire the world!",
  subtitle = "",
  formTitle = "Get the SAI Experience in Your Hands",
  buttonText = "Get Brochure",
  brochureText = "Get the brochure instantly on WhatsApp and discover why parents choose SAI.",
  backgroundImage = "/images/school-background.png",
  childrenImage = "/images/children-image.png",
  decorativeLines = "/icons/double-lines.svg",
  arrowIcon = "/icons/right-arrow.svg",
} = Astro.props as Props;
---

<section
  class="bg-n-50 relative w-full overflow-hidden bg-[url('/images/school-background.png')] bg-cover bg-center pt-24 md:pt-36"
  data-name="hero-section"
>
  <!-- Main Content -->
  <div
    class="relative z-10 container mx-auto mb-15 px-4 pt-10 md:mb-30 md:px-6 lg:pb-[91px] xl:mb-0 2xl:px-0 2xl:pt-32"
  >
    <div class="flex flex-col lg:flex-row lg:items-center lg:gap-0">
      <!-- Left Content -->
      <div class="flex flex-col gap-11 md:gap-16 lg:gap-24">
        <!-- Hero Text -->
        <div class="w-full md:w-[90%] xl:w-[60%]">
          <CommonHeader title={title} />
        </div>

        <!-- Form Card -->
        <div
          class="border-n-200 rounded-lg border bg-white p-3.5 shadow-sm md:px-6 md:py-5 lg:w-[55%]"
        >
          <div class="space-y-3.5">
            <h2 class="text-n-800 text-xl md:text-3xl">
              {formTitle}
            </h2>

            <form
              class="flex flex-col gap-3.5 md:flex-row md:flex-wrap md:justify-between"
              data-hero-form
            >
              <!-- Student Name Input -->
              <div class="space-y-1 md:w-[58%]">
                <input
                  type="text"
                  placeholder="Student's Name"
                  class="border-n-500 text-n-500 placeholder-n-500 h-[50px] w-full rounded-lg border px-3 text-base font-medium focus:border-transparent focus:ring-2 focus:ring-orange-500 focus:outline-none"
                  required
                />
              </div>

              <!-- Grade Select -->
              <div class="relative space-y-1 md:w-[39%]">
                <select
                  class="border-n-500 text-n-800 h-[50px] w-full cursor-pointer appearance-none rounded-lg border bg-white px-3 text-base font-medium focus:border-transparent focus:ring-2 focus:ring-orange-500 focus:outline-none"
                  required
                >
                  <option value="" disabled selected>Select Grade</option>
                  <option value="nursery">Nursery</option>
                </select>
                <!-- Custom dropdown arrow -->
                <div
                  class="pointer-events-none absolute top-1/2 right-3 -translate-y-1/2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 20 20"
                    fill="none"
                  >
                    <path
