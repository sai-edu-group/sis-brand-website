---
import SectionHeader from "../../components/SectionHeader.astro";
import AdmissionStepsCard from "../../components/AdmissionStepsCard.astro";

const steps = [
  {
    id: 1,
    number: "1",
    icon: "icon-1.svg", // or keep inline SVG if you want
    title: "Submit Your Inquiry",
    description:
      "Fill out the admission inquiry form and let us know about your child’s interests and needs.",
  },
  {
    id: 2,
    number: "2",
    icon: "icon-2.svg",
    title: "Schedule a Campus Visit",
    description:
      "Our team will invite you to explore the campus and meet our faculty.",
  },
  {
    id: 3,
    number: "3",
    icon: "icon-3.svg",
    title: "Talk to Our Counselor",
    description:
      "Our friendly admissions team will reach out to understand your needs and answer any questions.",
  },
  {
    id: 4,
    number: "4",
    icon: "icon-2.svg",
    title: "Schedule a Campus Visit",
    description:
      "Our team will invite you to explore the campus and meet our faculty.",
  },
  {
    id: 5,
    number: "5",
    icon: "icon-3.svg",
    title: "Talk to Our Counselor",
    description:
      "Our friendly admissions team will reach out to understand your needs and answer any questions.",
  },
  {
    id: 6,
    number: "6",
    icon: "icon-3.svg",
    title: "Talk to Our Counselor",
    description:
      "Our friendly admissions team will reach out to understand your needs and answer any questions.",
  },
];
---

<section>
  <div
    class="container mx-auto flex flex-col gap-10 px-6 py-24 md:px-12 lg:px-6"
  >
    <!-- Section header component -->
    <SectionHeader
      title="How it Works"
      subtitle="We’re here to guide you every step of the way - from your first inquiry to the moment your child walks into our world."
    />

    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      {
        steps.map((step) => (
          <AdmissionStepsCard
            number={step.number}
            icon={step.icon}
            title={step.title}
            description={step.description}
          />
        ))
      }
    </div>
  </div>
</section>
